{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://udes.io/jsonschema/workflows/common.json",
  "title": "Common",
  "description": "Workflows Common definitions",
  "type": "object",
  "definitions": {
    "styles": {
      "type": "string",
      "enum": [
        "primary",
        "secondary",
        "disabled",
        "default"
      ]
    },
    "sizes": {
      "type": "string",
      "enum": [
        "compact",
        "normal"
      ]
    },
    "jsonpath": {
      "type": "string"
    },
    "message": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "error",
            "success"
          ]
        },
        "template": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "type",
        "template"
      ]
    },
    "task_target": {
      "type": "object",
      "properties": {
        "flow_path": {
          "type": "string"
        },
        "task": {
          "type": "string"
        }
      },
      "required": [
        "flow_path",
        "task"
      ]
    },
    "component_lookup": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "destination_path": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "select_option": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": [
            "string",
            "integer"
          ]
        }
      },
      "required": [
        "label"
      ]
    },
    "content": {
      "type": "object",
      "properties": {
        "tag": {
          "type": "string", "enum": ["p","h1","h2","h3","h4","h5","h6"]
        },
        "text": {
          "type": "string"
        }
      }
    },
    "checkbox_data": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "boolean" }
          ]
        },
        "value_path": {
           "$ref": "../common.json#/definitions/jsonpath"
        }
      },
      "required": [
        "label"
      ]
    },
    "suggestions_data": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
