{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://udes.io./jsonschema/workflows/tasks/screen.json",
  "title": "screen",
  "description": "Workflows screen task",
  "type": "object",
  "definitions": {
    "component_lookup": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "status_msg": { "$ref": "common.json#/definitions/message" },
        "destination_path": { "type": "string" }
      },
      "required": ["name"]
    }
  },
  "properties": {
    "name": { "type": "string" },
    "type": { "type": "string", "enum": ["screen"] },
    "preconditions": { "type": "array", "items": [{ "type": "string" }] },
    "components": {
      "type": "array",
      "items": [
        {
          "type": "array",
          "items": [{ "$ref": "#/definitions/component_lookup" }]
        }
      ]
    }
  },
  "required": ["name", "type"]
}
